{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>DataCriacao</th>
                <td>{{ user.DataCriacao ? user.DataCriacao|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>DataAtualizacao</th>
                <td>{{ user.DataAtualizacao ? user.DataAtualizacao|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Nome</th>
                <td>{{ user.Nome }}</td>
            </tr>
            <tr>
                <th>DataNascimento</th>
                <td>{{ user.DataNascimento ? user.DataNascimento|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.Email }}</td>
            </tr>
            <tr>
                <th>ListaTelefones</th>
                <td>{{ user.ListaTelefones ? user.ListaTelefones|join(', ') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_user_index') }}">back to list</a>

    <a href="{{ path('app_user_edit', {'id': user.id}) }}">edit</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
